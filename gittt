#!/usr/bin/env ruby
# frozen_string_literal: true

require_relative './config'
require_relative './lib/gittt'

config = Gittt::Config.new(CONFIG)
consumer = Gittt::Consumer.new(config)

WRITER = Thread.new do
  loop do
    config.storage.publish(:master, Time.now)
    sleep 1
  end
end

consumer.start
