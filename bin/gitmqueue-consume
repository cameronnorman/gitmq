#!/usr/bin/env ruby
# frozen_string_literal: true

require 'gitmqueue'

path = ARGV.shift
branch = ARGV.shift
consumer = ARGV.shift

consumer = GitMQueue::Consumer.new(
  storage: GitMQueue::Storage.new(path),
  name: consumer,
  branch: branch
)

consumer.consume { |m| puts m }

begin
  sleep
rescue Interrupt
  puts 'Bye.'
end
