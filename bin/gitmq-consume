#!/usr/bin/env ruby
# frozen_string_literal: true

require 'gitmq'

path = ARGV.shift
branch = ARGV.shift
consumer = ARGV.shift

consumer = GitMQ::Consumer.new(
  storage: GitMQ::Storage.new(path),
  name: consumer,
  branch: branch
)

begin
  consumer.consume { |m| puts m }
rescue Interrupt
  puts 'Bye.'
end
