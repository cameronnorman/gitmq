#!/usr/bin/env ruby
# frozen_string_literal: true

require 'gitmq'

path = ARGV.shift
branch = ARGV.shift

config = GitMQ::Config.new(
  storage: GitMQ::Storage.new(path)
)

producer = GitMQ::Producer.new(config)

loop do
  producer.publish(branch, gets.strip)
rescue Interrupt
  puts 'Bye.'
  exit
end
